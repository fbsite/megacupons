{
    "version": 2,
    "builds": [
        { "src": "public/*", "use": "@vercel/static" },
        { "src": "api/*", "use": "@vercel/node" }
    ],
    "rewrites": [
        { "source": "/api/cupons", "destination": "/api/cupons.js" },
        { "source": "/api/produtos", "destination": "/api/produtos.js" },
        { "source": "/api/campanhas", "destination": "/api/campanhas.js" },
        { "source": "/api/lojas", "destination": "/api/lojas.js" },
        { "source": "/stores", "destination": "/public/stores.html" },
        { "source": "/", "destination": "/public/index.html" }
    ]
}
